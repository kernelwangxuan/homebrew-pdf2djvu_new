usage()
{
    printf '%s LOCALE-DIR MO-FILE...\n' "$0"
}

set -e -u
: "${INSTALL:=install}"
[ $# -ge 1 ] || { usage >&2; exit 1; }
localedir="$1"
shift
for mofile in "$@"
do
    basename=${mofile##*/}
    locale=${basename%.*}
    (
        PS4='$ '
        set -x
        $INSTALL -d "$localedir/$locale/LC_MESSAGES"
        $INSTALL -m 644 "$mofile" "$localedir/$locale/LC_MESSAGES/pdf2djvu.mo"
    )
done

# vim:ts=4 sts=4 sw=4 et
