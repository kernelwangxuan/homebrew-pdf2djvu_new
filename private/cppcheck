here=${0%/*}
here=${here#./}
root="$here/../"
root=${root#private/../}

if [ $# -eq 0 ]
then
    set -- "${root:-.}/"*.cc
fi

exec cppcheck \
    --enable=warning \
    --error-exitcode=1 \
    --suppress='uninitvar:sys-encoding.cc:143' \
    --suppress='syntaxError:string-format.cc:211' \
    "$@"

# vim:ts=4 sts=4 sw=4 et
